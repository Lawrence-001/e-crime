@model ContactUsVM
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <!--Start of Page Title-->
            <h4 class="mb-0">Contact us</h4>
            <!--End of Page Title-->
            <!--Start of Breadcrumb-->
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">e-crime</a></li>
                    <li class="breadcrumb-item active">Contact us</li>
                </ol>
            </div>
            <!--End of Breadcrumb-->
        </div>
    </div>
</div>
<!-- end page title -->

<!--Start of Page Body-->
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title pb-2">E-Crime Portal</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <td>Telephone</td>
                                <th>+254 7000 00000</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Email</td>
                                <th>ecrime@gmail.com</th>
                            </tr>
                            <tr>
                                <td>Website</td>
                                <th>www.ecrime.com</th>
                            </tr>
                            <tr>
                                <td>Address</td>
                                <th>Nairobi</th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title pb-2">Get in touch with us</h5>
                <form method="post">
                    @if (TempData["Successful"] != null)
                    {
                        <div class="alert alert-info alert-dismissible" role="alert">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            @TempData["Successful"]
                        </div>
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        <label asp-for="Subject"></label>
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Message"></label>
                        <textarea asp-for="Message" class="form-control" placeholder="Enter Message"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div><br />
                    <div>
                        <button type="submit" class="btn btn-primary mb-2" asp-action="Index" asp-controller="ContactUs">Submit</button>
                    </div>
                </form>
