@model List<UserRoleVM>
@{
    var roleId = ViewBag.roleId;
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <!--Start of Page Title-->
            <h4 class="mb-0">Edit Users InRole</h4>
            <!--End of Page Title-->
            <!--Start of Breadcrumb-->
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);"></a>E-Crime Portal</li>
                    <li class="breadcrumb-item active">Edit Users InRole</li>
                </ol>
            </div>
            <!--End of Breadcrumb-->
        </div>
    </div>
</div>

<div class="row">
    <div class="container-fluid col-lg-7 col-md-6">
        <form method="post">
            <div class="card">
                <div class="card-title text-center mt-2">
                    <h4>Edit Users InRole</h4>
                </div>
                <div class="card-header">
                    <h5 class="card-title">Role: @ViewBag.RoleName</h5>
                </div>
                <div class="card-body">
                    <h4 class="card-title m-2">Add or remove users from this role</h4>

                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check">
                            <input hidden asp-for="@Model[i].UserId" />
                            <input hidden asp-for="@Model[i].Email" />
                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                @Model[i].Email
                            </label>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    @* <form method="post">
                    <button type="submit" class="btn btn-primary"
                    asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleId="@roleId">
                    Update
                    </button>
                    </form> *@
                    @*  <button type="submit" class="btn btn-primary"
                    asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleId="@roleId">
                    Update
                    </button> *@
                    <input type="submit" value="Update" class="btn btn-primary" />

                    <a class="btn btn-secondary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@roleId">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

