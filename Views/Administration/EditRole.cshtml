@model EditRoleVM
@{
    ViewBag.Title = "Edit Roles";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <!--Start of Page Title-->
            <h4 class="mb-0">Edit Role</h4>
            <!--End of Page Title-->
            <!--Start of Breadcrumb-->
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);"></a>E-Crime Portal</li>
                    <li class="breadcrumb-item active">Edit Role</li>
                </ol>
            </div>
            <!--End of Breadcrumb-->
        </div>
    </div>
</div>

<div class="row">
    <div class="container-fluid col-lg-7 col-md-6">
        <div class="card">
            <div class="card-body">
                <form method="post" asp-action="EditRole" asp-controller="Administration">
                    <div asp-validation-summary="All" class="text-danger"> </div>
                    <input hidden asp-for="Id" />
                    <div>
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                    </div><br />
                    <button type="submit" class="btn btn-primary">Update</button>

                    @* <input type="submit" asp-action="EditRole" asp-controller="Administration" class="btn btn-primary" value="update" />| *@
                    <a asp-action="AllRoles" asp-controller="Administration" class="btn btn-success">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row mt-4">
    <div class="container-fluid col-lg-7 col-md-6">
        <div class="card">
            <div class="card-title text-center mt-2">
                <h4>Users in this role</h4>
            </div>
            <form method="post">
                <div class="card-body">

                    @if (Model.Users != null && Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5>
                        }
                    }
                    else
                    {
                        <h4>There are no users in this role</h4>
                    }
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-route-roleId="@Model.Id" asp-action="EditUsersInRole"
                       asp-controller="Administration">
                        Add or Remove User(s) from this role
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>