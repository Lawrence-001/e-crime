@model CreateOfficerVM
@{
    ViewData["Title"] = "Add Officer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <!--Start of Page Title-->
            <h4 class="mb-0">Police Officers</h4>
            <!--End of Page Title-->
            <!--Start of Breadcrumb-->
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">e-crime</a></li>
                    <li class="breadcrumb-item active">Police Officers</li>
                </ol>
            </div>
            <!--End of Breadcrumb-->
        </div>
    </div>
</div>
<!-- end page title -->
<div class="row">
    <div class="container-fluid col-lg-7 col-md-6 col-sm-7">
        <div class="card">
            <h5 class="text-center card-title mt-2">Add Police Officer</h5>
            <div class="card-body">
                <form method="post" asp-action="PoliceStation" asp-controller="AddOfficer">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-6">
                            <label asp-for="FName"></label>
                            <input asp-for="FName" class="form-control" placeholder="enter first name" />
                            <span asp-validation-for="FName" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <label asp-for="LName"></label>
                            <input asp-for="LName" class="form-control" placeholder="enter last name" />
                            <span asp-validation-for="LName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <label asp-for="Address"></label>
                            <input asp-for="Address" class="form-control" placeholder="enter address eg Fedha" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <label asp-for="Gender"></label>
                            <select asp-for="Gender" class="form-control" asp-items="@Html.GetEnumSelectList<Gender>()">
                                <option value="" selected>Select...</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <label asp-for="MobileNumber"></label>
                            <input asp-for="MobileNumber" class="form-control" placeholder="enter mobile number" />
                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" placeholder="john@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <label asp-for="SelectedStation"></label>
                        <select asp-for="SelectedStation" class="form-control" asp-items="@(new SelectList(ViewBag.Stations, "Value", "Text"))">
                            <option value="" selected>Select...</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" aria-describedby="passwordHelpBlock" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div> <span id="passwordHelpBlock" class="form-text">
                        Password must be at least 8 characters long.
                    </span><br />
                    <div>
                        <button type="submit" class="btn btn-primary" asp-action="AddOfficer" asp-controller="PoliceStation">Submit</button>
                        <a asp-action="Index" asp-controller="PoliceStation" class="btn btn-success">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

