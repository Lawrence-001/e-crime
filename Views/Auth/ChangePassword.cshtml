@model ChangePasswordVM
@{
    ViewBag.Title = "Change Password";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <!--Start of Page Title-->
            <h4 class="mb-0">Change Password</h4>
            <!--End of Page Title-->
            <!--Start of Breadcrumb-->
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">e-crime</a></li>
                    <li class="breadcrumb-item active">Change Password</li>
                </ol>
            </div>
            <!--End of Breadcrumb-->
        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="container-fluid  col-lg-8 col-md-6 col-sm-7">
        <div class="card">
            <div class="card-title text-center">
                <h4 class="text-center mt-3">Change Password</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    @if (TempData["Successful"] != null)
                    {
                        <div class="alert alert-info alert-dismissible" role="alert">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            @TempData["Successful"]
                        </div>
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        <label asp-for="CurrentPassword"></label>
                        <input asp-for="CurrentPassword" class="form-control" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="NewPassword"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="ConfirmNewPassword"></label>
                        <input asp-for="ConfirmNewPassword" class="form-control" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div><br />
                    <div>
                        <button type="submit" class="btn btn-success mb-2" asp-action="ChangePassword" asp-controller="Auth">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>