@model IEnumerable<Crime>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <!--Start of Page Title-->
            <h4 class="mb-0">Submited crimes</h4>
            <!--End of Page Title-->
            <!--Start of Breadcrumb-->
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);"></a>E-Crime portal</li>
                    <li class="breadcrumb-item active">submitted crime</li>
                </ol>
            </div>
            <!--End of Breadcrumb-->
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-xl-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <h5 style="display:inline">Crime Details </h5>
                    <a asp-area="" asp-controller="Crimes" asp-action="index"> <i class="bx bx-edit-alt float-end" style="font-size: 23px;"></i></a>
                </div>
                <p>
                    Below are the details of the crimes you have submitted.
                </p>
                <div class="row g-0 p-2">
                    <div class="table-responsive">
                        <table class="table mb-0 table-borderless table-striped">
                            <thead>
                                <tr>
                                    <th>Location</th>
                                    <th>Type of Crime</th>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th class="4">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var crime in Model)
                                {
                                    <tr>
                                        <td>@crime.Location</td>
                                        <td>@crime.CrimeType</td>
                                        <td>@crime.DateTime</td>
                                        <td>@crime.Description</td>
                                        <td>@crime.Status</td>
                                        <td class="4">
                                            <a asp-action="Edit" asp-controller="Crimes" asp-route-id="@crime.Id">Edit</a>
                                            @* only officers admin can delete a crime *@
                                            @* <a asp-action="Delete" asp-controller="Crimes" asp-route-id="@crime.Id" class="text-danger"> Delete</a> *@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-2">
    <div class="col-lg-12 col-xl-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <h5 style="display:inline">Solved Crime Details </h5>
                    <a asp-area="" asp-controller="Crimes" asp-action="SolvedCrimes"> </a>

                </div>
                <p>
                    The details are as below:
                </p>
                <div class="row g-0 p-2">
                    <div class="table-responsive">
                        <table class="table mb-0 table-borderless table-striped">
                            <thead>
                                <tr>
                                    <th>Location</th>
                                    <th>Type of Crime</th>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section AppScripts {


}

